<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/imgTaskTypeTask"
        android:layout_width="@dimen/task_icon_size"
        android:layout_height="@dimen/task_icon_size"
        android:src="@drawable/ic_task_24"
        android:tint="@color/task_item" />

    <ImageView
        android:id="@+id/imgTaskTypeJira"
        android:layout_width="@dimen/task_icon_size"
        android:layout_height="@dimen/task_icon_size"
        android:src="@drawable/ic_jira_24"
        android:tint="@color/jira_logo" />

    <ImageView
        android:id="@+id/imgTaskTypeTime"
        android:layout_width="@dimen/task_icon_size"
        android:layout_height="@dimen/task_icon_size"
        android:src="@drawable/ic_time_activity_24"
        android:tint="@color/time_logo" />

    <TextView
        android:id="@+id/txtTaskTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/imgTaskTypeTask"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/fish_task"
        android:textColor="@android:color/primary_text_light"
        android:textSize="16sp" />

</RelativeLayout>
